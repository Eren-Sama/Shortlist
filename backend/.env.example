# ──────────────────────────────────────────────
# Shortlist — Environment Variables
# ──────────────────────────────────────────────
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# ──────────────────────────────────────────────

# Application
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=generate-a-random-64-char-string-here

# CORS — comma-separated allowed origins
ALLOWED_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# ── Supabase ──
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key
SUPABASE_JWT_SECRET=your-jwt-secret

# ── LLM Providers ──
# Primary: Groq (free tier available)
GROQ_API_KEY=your-groq-api-key

# Fallback: OpenAI (optional)
# OPENAI_API_KEY=your-openai-api-key

# Model Selection
LLM_ANALYSIS_MODEL=llama-3.3-70b-versatile
LLM_CODE_MODEL=openai/gpt-oss-120b
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=4096

# ── Repo Analyzer (Phase 2) ──
REPO_CLONE_TIMEOUT_SECONDS=120
REPO_ANALYSIS_TIMEOUT_SECONDS=60
REPO_MAX_SIZE_MB=500
